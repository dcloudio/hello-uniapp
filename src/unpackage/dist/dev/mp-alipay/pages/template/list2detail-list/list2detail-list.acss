
.banner {
	height: 360rpx;
	overflow: hidden;
	position: relative;
	background-color: #ccc;
}
.banner-img {
	width: 100%;
}
.banner-title {
	max-height: 84rpx;
	overflow: hidden;
	position: absolute;
	left: 30rpx;
	bottom: 30rpx;
	width: 90%;
	font-size: 32rpx;
	font-weight: 400;
	line-height: 42rpx;
	color: white;
	z-index: 11;
}
.uni-media-list-logo {
	width: 180rpx;
	height: 140rpx;
}
.uni-media-list-body {
	height: auto;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}
.uni-media-list-text-top {
	height: 74rpx;
	font-size: 28rpx;
	overflow: hidden;
}
.uni-media-list-text-bottom {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}

